@page
@model SimpleClincManage.Pages.Admin.PatientModel
@{
}
<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info"> Patients List</h2>

    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white"> Add new Patient </a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Patient.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Patient.FirstOrDefault().PatientName"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Patient.FirstOrDefault().Email"></label>


                        </th>
                        <th>
                             <label asp-for="Patient.FirstOrDefault().MedicalRec"></label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Patient)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m=>item.PatientName)

                            </td>
                            <td>
                                @Html.DisplayFor(m=>item.Email)
                            </td>
                             <td>
                                @Html.DisplayFor(m=>item.PhoneNo)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('are you sure you want to delete ?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white" > Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Patients avaliable yet  </p>
            }

        </form>

    </div>
</div>